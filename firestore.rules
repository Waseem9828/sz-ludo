
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own document.
    // Any authenticated user can create a user document (during sign-up).
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Authenticated users can read games, but only specific logic can create/update.
    match /games/{gameId} {
      allow read, create, update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy.uid;
    }

    // Any authenticated user can read tournaments.
    // Only superadmins can create, update, or delete tournaments.
    match /tournaments/{tournamentId} {
      allow read: if request.auth != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Settings can only be read by authenticated users, but only written to by superadmin.
    match /settings/{docId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Transactions can only be created by authenticated users for themselves. Read/Update by admin.
    match /transactions/{transactionId} {
        allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Notifications can be read by anyone, but only created by admin/support.
    match /notifications/{notificationId} {
       allow read: if request.auth != null;
       allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['superadmin', 'support'];
    }

    // Deposits can be read/updated by admin, created by users for themselves.
    match /deposits/{depositId} {
        allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['superadmin', 'finance'];
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Withdrawals can be read/updated by admin, created by users for themselves.
    match /withdrawals/{withdrawalId} {
        allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['superadmin', 'finance'];
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
