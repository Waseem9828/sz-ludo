
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Banners can be read by anyone, written by admins
    match /banners/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Deposit screenshots can only be created by the user who owns the deposit request.
    // The filename must contain the user's UID to prevent enumeration.
    match /deposits/{userId}/{fileName} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['superadmin', 'finance']);
      allow write: if request.auth != null && request.auth.uid == userId && request.auth.uid == request.resource.metadata.userId;
    }

    // Match result screenshots can only be created by players in that game.
    // The filename must contain the game's ID.
    match /screenshots/{gameId}/{fileName} {
      allow read;
      allow write: if request.auth != null && gameId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.games;
    }

    // Tournament images can be read by anyone, written by admins
    match /tournaments/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
  }
}
