
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    function isAuth() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return request.auth.token.role == 'superadmin';
    }

    // Banners: Public read, admin write
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // Tournaments: Public read, admin write
    match /tournaments/{allPaths=**} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Deposit screenshots: Only the user can upload to their own folder
    match /deposits/{userId}/{fileName} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }
    
    // Game screenshots: Only authenticated users can upload
    // A more secure rule would check if the user is a player in the gameId
    match /screenshots/{gameId}/{fileName} {
      allow read, write: if isAuth();
    }
  }
}
