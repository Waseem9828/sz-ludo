rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files by default. This is generally safe if URLs are not guessable.
    match /{allPaths=**} {
      allow read;
    }
    
    // Secure the deposits folder.
    // A user can only write to their own subfolder.
    match /deposits/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users (admins) to upload banners.
    // You might want to restrict this further to specific admin roles using custom claims in the future.
     match /banners/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Rules for tournament images
     match /tournaments/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow users to upload screenshots for games they are part of.
    // The filename should contain the gameId to verify against.
     match /screenshots/{gameId}/{fileName} {
       allow write: if request.auth != null;
     }
  }
}
