rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload their own deposit screenshot
    // The path contains the userId, so we can secure it.
    match /deposits/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      // Only allow the user to read their own screenshots
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload game screenshots
    // The gameId is not easily guessable, providing some security.
    // Further rules could restrict reads to only players in the game if needed.
    match /screenshots/{gameId}/{fileName} {
      allow write: if request.auth != null;
      // Allow any authenticated user to read game screenshots, e.g., for review by admin or opponent.
      allow read: if request.auth != null;
    }
  }
}
