
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if a user is authenticated
    function isAuth() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return isAuth() && request.auth.token.role in ['superadmin', 'finance', 'support'];
    }

    // Banners can be read by anyone, but only written by admins.
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Tournament images can be read by anyone, but only written by admins.
    match /tournaments/{allPaths=**} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Users can upload their own deposit screenshots into their own folder.
    // This path matches the code in `src/lib/firebase/deposits.ts`.
    match /deposits/{userId}/{fileName} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }
    
    // Users can upload their own game result screenshots.
    // The gameId in the path provides context. Only players of that game can upload.
    match /screenshots/{gameId}/{fileName} {
      allow read: if isAuth(); // Allow admins or players to read. A more secure rule would check game document.
      allow write: if isAuth() && exists(/databases/$(database)/documents/games/$(gameId)) && request.auth.uid in get(/databases/$(database)/documents/games/$(gameId)).data.playerUids;
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
