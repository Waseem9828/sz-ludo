rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  
    // Deposit Screenshots
    // Allow a user to create and update screenshots only within their own user-ID-named folder.
    // This covers both initial upload and potential overwrites.
    match /deposits/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Game Result Screenshots
    // Allow a user to create and update screenshots for a game they are part of.
    // The filename should include the user's ID to prevent overwriting by the opponent.
    match /screenshots/{gameId}/{userId}_{fileName} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Banners (Admin only)
    // Allow admins to create, update, and delete images in any of the banner subfolders.
    match /banners/{folder}/{fileName} {
      allow read: if true; // Banners are public
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Tournament Images (Admin only)
    // Allow admins to create, update, and delete images in the tournaments folder.
     match /tournaments/{fileName} {
      allow read: if true; // Tournament images are public
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
  }
}
