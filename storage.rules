rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow users to upload their own deposit screenshots
    // Path: deposits/{userId}/{fileName}
    match /deposits/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Allow authenticated users to upload game screenshots
    // Path: screenshots/{gameId}/{fileName}
    match /screenshots/{gameId}/{fileName} {
      allow read, write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Allow authenticated users (admins) to upload banners
    // Path: banners/{folder}/{fileName}
    match /banners/{folder}/{fileName} {
        allow read: if true; // Public read for banners
        allow write: if request.auth != null; // Only authenticated users can upload
    }

    // Allow authenticated users to upload tournament images
    match /tournaments/{fileName} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    
    // Allow authenticated users to upload home card images
    match /homecards/{fileName} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    
     // Allow authenticated users to upload referral images
    match /referral/{fileName} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Fallback: Deny all other routes
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
