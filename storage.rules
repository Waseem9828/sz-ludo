rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all access unless a more specific rule allows it.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload their own deposit screenshot.
    // The path contains the userId, so we can secure it.
    match /deposits/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload game screenshots.
    // The gameId is not easily guessable, providing some security.
    match /screenshots/{gameId}/{fileName} {
      allow write: if request.auth != null;
      // Allow any authenticated user to read game screenshots for verification.
      // For higher security, this could be restricted to game players via Firestore lookups.
      allow read: if request.auth != null;
    }

     // Allow anyone to read tournament images
    match /banners/tournaments/{fileName} {
      allow read: if true;
      allow write: if request.auth != null; // Allow admins to upload
    }
  }
}
