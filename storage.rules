
rules_version = '2';

// SZ Ludo Storage Rules
// Author: Firebase Studio AI
// Last Updated: 2024-08-18

service firebase.storage {
  match /b/{bucket}/o {

    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload their own deposit screenshots.
    // Path: /deposits/{userId}/{fileName}
    match /deposits/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Allow authenticated users to upload game result screenshots.
    // The gameId is public, so any authenticated user in the game can upload.
    // Path: /screenshots/{gameId}/{fileName}
    match /screenshots/{gameId}/{fileName} {
      allow read, write: if request.auth != null
                         && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                         && request.resource.contentType.matches('image/.*');
    }
    
    // Allow authenticated users (assumed admin via app logic) to upload banners.
    // This is for the admin settings page.
    match /banners/{folder}/{fileName} {
        allow read, write: if request.auth != null
                         && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                         && request.resource.contentType.matches('image/.*');
    }
  }
}
