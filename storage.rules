
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to upload their own deposit screenshots
    // Path: /deposits/{userId}/{fileName}
    match /deposits/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload game screenshots
    // Path: /screenshots/{gameId}/{fileName}
    match /screenshots/{gameId}/{fileName} {
      allow write: if request.auth != null;
      // Reading screenshots should likely be restricted to game players or admins
      // For now, allowing any authenticated user to read if needed by the app.
      // A more secure rule would check against a game document in Firestore.
      allow read: if request.auth != null;
    }
    
    // Allow anyone to read tournament banners
    match /banners/tournaments/{allPaths=**} {
      allow read;
    }
  }
}
