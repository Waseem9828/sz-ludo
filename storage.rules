rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User deposits screenshots
    match /deposits/{userId}/{fileName} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // User game screenshots
    match /screenshots/{userId}/{fileName} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Banners and other admin-uploaded content
    match /banners/{folder}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Referral images (publicly readable, writable by authenticated users)
    match /referral/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Tournament images (publicly readable, writable by admin)
    match /tournaments/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Home card images (publicly readable, writable by admin)
    match /homecards/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }


    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
