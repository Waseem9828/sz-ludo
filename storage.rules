rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User deposits screenshots
    match /deposits/{userId}/{fileName} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'superadmin' || request.auth.token.role == 'finance' || request.auth.token.role == 'support');
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // User game screenshots
    match /screenshots/{userId}/{fileName} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'superadmin' || request.auth.token.role == 'support');
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Banners (public read, admin write)
    match /banners/{folder}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.role == 'superadmin');
    }
    
    // Referral images (public read, admin write)
    match /referral/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.role == 'superadmin');
    }
    
    // Tournament images (public read, admin write)
     match /tournaments/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.role == 'superadmin');
    }

    // Default deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
