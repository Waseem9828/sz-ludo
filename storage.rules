rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Function to check if a user is authenticated
    function isAuth() {
      return request.auth != null;
    }
    
    // Function to check if user is an admin
    function isAdmin() {
      return request.auth.token.role in ['superadmin', 'finance', 'support'];
    }

    // Banners can be read by anyone, but only written by admins.
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if isAuth() && isAdmin();
    }
    
    // Tournament images can be read by anyone, but only written by admins.
    match /tournaments/{allPaths=**} {
      allow read: if true;
      allow write: if isAuth() && isAdmin();
    }

    // Deposit screenshots: A user can only write to their own folder.
    match /deposits/{userId}/{fileName} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }

    // Game result screenshots: A user can only write if they are part of the game.
    match /screenshots/{gameId}/{fileName} {
       allow read, write: if isAuth() && exists(/databases/$(database)/documents/games/$(gameId)) && request.auth.uid in get(/databases/$(database)/documents/games/$(gameId)).data.playerUids;
    }
  }
}
