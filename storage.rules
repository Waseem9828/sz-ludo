
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isGamePlayer(gameId) {
       return request.auth.uid in get(/databases/(default)/documents/games/$(gameId)).data.playerUids;
    }

    // Banners can be read by anyone, but only written by admins.
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    // Tournaments images can be read by anyone, but only written by admins.
    match /tournaments/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Deposit screenshots can only be created by the user who owns that folder path.
    match /deposits/{userId}/{fileName} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Game result screenshots can only be created by a player in that game.
    match /screenshots/{gameId}/{fileName} {
       allow read, write: if isSignedIn() && isGamePlayer(gameId);
    }
  }
}
