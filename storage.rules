rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read;
    }

    match /deposits/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /screenshots/{gameId}/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
